<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchquestioncontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.caffae.studentsc.SearchQuestionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="50dp"></SearchView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"></ScrollView>

        <Button
            android:id="@+id/btnasknewquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ask New Question" />
    </LinearLayout>
</FrameLayout>
